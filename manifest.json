{
  "manifest_version": 2,
  "name": "SJTU查分插件",
  "description": "",
  "version": "2.1",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "查分，点我！",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "notifications",
    "http://*/sjtu.edu.cn/*",
    "https://*/sjtu.edu.edu.cn/*"
  ],
  "update_url":"http://clients2.google.com/service/update2/crx"
}

